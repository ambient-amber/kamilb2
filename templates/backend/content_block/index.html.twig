{% extends "backend/base.html.twig" %}

{% block moduleTitle %}Контентные блоки{% endblock %}
{% block moduleSubTitle %}Список{% endblock %}

{% block content %}
    <div class="ks-dashboard-tabbed-sidebar">
        <div class="ks-dashboard-tabbed-sidebar-widgets">
            <div class="row">
                <div class="col-lg-12">
                    <table class="table table-striped table-bordered table-hover module_content_table">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Text_id</th>
                                <th>Description</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for content_block in pagination %}
                                <tr>
                                    <td>{{ content_block.textId }}</td>
                                    <td>{{ content_block.description }}</td>
                                    <td>
                                        <a href="{{ path('content_block_show', {'id': content_block.id}) }}" title="look">
                                            <span class="ks-icon la la-eye"></span>
                                        </a>
                                        <a href="{{ path('content_block_edit', {'id': content_block.id}) }}" title="edit">
                                            <span class="ks-icon la la-pencil"></span>
                                        </a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="4">no records found</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>

                    <p>
                        Total: {{ pagination.getTotalItemCount }}
                    </p>

                    {{ knp_pagination_render(pagination) }}

                    <a class="btn btn-primary btn-sm" href="{{ path('content_block_new') }}">Create new</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
