<form method="post" action="{{ path('content_block_delete', {'id': content_block.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ content_block.id) }}">
    <button class="btn btn-danger btn-sm">Delete</button>
</form>
