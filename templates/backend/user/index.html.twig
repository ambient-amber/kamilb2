{% extends "backend/base.html.twig" %}

{% block moduleTitle %}Пользователи{% endblock %}
{% block moduleSubTitle %}Список{% endblock %}

{% block content %}
    <div class="ks-dashboard-tabbed-sidebar">
        <div class="ks-dashboard-tabbed-sidebar-widgets">
            <div class="row">
                <div class="col-lg-12">
                    <table class="table table-striped table-bordered table-hover module_content_table">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Логин</th>
                                <th>Роли</th>
                                <th>Действия</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for user in users %}
                                <tr>
                                    <td>{{ user.id }}</td>
                                    <td>{{ user.email }}</td>
                                    <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                                    <td>
                                        <a href="{{ path('user_show', {'id': user.id}) }}">
                                            <span class="ks-icon la la-eye"></span>
                                        </a>
                                        <a href="{{ path('user_edit', {'id': user.id}) }}">
                                            <span class="ks-icon la la-pencil"></span>
                                        </a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="5">no records found</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>

                    <a class="btn btn-primary btn-sm" href="{{ path('user_new') }}">Добавить пользователя</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
