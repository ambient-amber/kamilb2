{% extends "backend/base.html.twig" %}

{% block moduleTitle %}Пользователи{% endblock %}
{% block moduleSubTitle %}Просмотр{% endblock %}

{% block content %}
    <div class="ks-dashboard-tabbed-sidebar">
        <div class="ks-dashboard-tabbed-sidebar-widgets">
            <div class="row">
                <div class="col-lg-12">
                    <table class="table">
                        <tbody>
                            <tr>
                                <th>Id</th>
                                <td>{{ user.id }}</td>
                            </tr>
                            <tr>
                                <th>Email</th>
                                <td>{{ user.email }}</td>
                            </tr>
                            <tr>
                                <th>Roles</th>
                                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
                            </tr>
                        </tbody>
                    </table>

                    <table>
                        <tr>
                            <td>
                                <a class="btn btn-primary btn-sm" href="{{ path('user_index') }}">back to list</a>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
