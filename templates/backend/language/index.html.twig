{% extends "backend/base.html.twig" %}

{% block moduleTitle %}Языки{% endblock %}
{% block moduleSubTitle %}Список{% endblock %}

{% block content %}
    <div class="ks-dashboard-tabbed-sidebar">
        <div class="ks-dashboard-tabbed-sidebar-widgets">
            <div class="row">
                <div class="col-lg-12">
                    <table class="table table-striped table-bordered table-hover module_content_table">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>TextId</th>
                                <th>Title</th>
                                <th>actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for language in languages %}
                                <tr>
                                    <td>{{ language.id }}</td>
                                    <td>{{ language.textId }}</td>
                                    <td>{{ language.title }}</td>
                                    <td>
                                        <a href="{{ path('language_show', {'id': language.id}) }}" title="look">
                                            <span class="ks-icon la la-eye"></span>
                                        </a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="3">no records found</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
