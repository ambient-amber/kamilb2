{% extends "backend/base.html.twig" %}

{% block moduleTitle %}Статьи{% endblock %}
{% block moduleSubTitle %}Просмотр{% endblock %}

{% block content %}
    <div class="ks-dashboard-tabbed-sidebar">
        <div class="ks-dashboard-tabbed-sidebar-widgets">
            <div class="row">
                <div class="col-lg-12">
                    <table class="table">
                        <tbody>
                            <tr>
                                <th>id</th>
                                <td>{{ article.id }}</td>
                            </tr>
                            <tr>
                                <th>url</th>
                                <td>{{ article.url }}</td>
                            </tr>
                            {% for translation in article.articleTranslations %}
                                <tr>
                                    <th>Поля с привязкой к языку</th>
                                    <td>
                                        <p>{{ translation.title }}</p>

                                        <div class="js_scrollable_block" data-height="150px">
                                            {{ translation.content|raw }}
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>

                    <table>
                        <tr>
                            <td>
                                <a class="btn btn-primary btn-sm" href="{{ path('article_index') }}">back to list</a>
                            </td>
                            <td>
                                <a class="btn btn-primary btn-sm" href="{{ path('article_edit', {'id': article.id}) }}">edit</a>
                            </td>
                            <td>
                                {{ include('backend/article/_delete_form.html.twig') }}
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}