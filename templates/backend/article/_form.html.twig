<div class="card">
    <div class="card-block">
        {{ form_start(form) }}
            <div class="form-group row">
                {{ form_label(
                    form.articleTranslations,
                    null,
                    {'label_attr': {'class': 'col-sm-2 form-control-label'}})
                }}

                <div class="col-sm-10">
                    {{ form_widget(form.articleTranslations) }}
                    {{ form_help(form.articleTranslations) }}
                    {{ form_errors(form.articleTranslations) }}
                </div>
            </div>

            <table>
                <tr>
                    <td>
                        <a class="btn btn-primary btn-sm" href="{{ path('article_index') }}">back to list</a>
                    </td>
                    <td>
                        <button class="btn btn-primary btn-sm">{{ button_label|default('Save') }}</button>
                    </td>
                    <td>
                        <a class="btn btn-primary btn-sm js_add_translation" href="#">Add translation</a>
                    </td>
                </tr>
            </table>
        {{ form_end(form) }}
    </div>
</div>