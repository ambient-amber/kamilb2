{% extends "backend/base.html.twig" %}

{% block moduleTitle %}Популярные магазины{% endblock %}
{% block moduleSubTitle %}Просмотр{% endblock %}

{% block content %}
    <div class="ks-dashboard-tabbed-sidebar">
        <div class="ks-dashboard-tabbed-sidebar-widgets">
            <div class="row">
                <div class="col-lg-12">
                    <table class="table">
                        <tbody>
                            <tr>
                                <th>Id</th>
                                <td>{{ popular_shop.id }}</td>
                            </tr>
                            <tr>
                                <th>Title</th>
                                <td>{{ popular_shop.title }}</td>
                            </tr>
                            <tr>
                                <th>Url</th>
                                <td>{{ popular_shop.url }}</td>
                            </tr>
                            <tr>
                                <th>Image</th>
                                <td>
                                    {% if popular_shop.imageHash %}
                                        <img src="{{ uploaded_hash_asset(popular_shop.imageHash) }}">
                                    {% else %}
                                        <p>Logo is not selected</p>
                                    {% endif %}
                                </td>
                            </tr>
                            <tr>
                                <th>Pub</th>
                                <td>{{ popular_shop.pub ? 'Yes' : 'No' }}</td>
                            </tr>
                        </tbody>
                    </table>

                    <table>
                        <tr>
                            <td>
                                <a class="btn btn-primary btn-sm" href="{{ path('popular_shop_index') }}">back to list</a>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
