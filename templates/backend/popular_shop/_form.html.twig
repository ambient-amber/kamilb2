<div class="card">
    <div class="card-block">
        {{ form_start(form) }}
            <div class="form-group row">
                {{ form_label(
                    form.title,
                    null,
                    {'label_attr': {'class': 'col-sm-2 form-control-label'}})
                }}

                <div class="col-sm-10">
                    {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                    {{ form_help(form.title) }}
                    {{ form_errors(form.title) }}
                </div>
            </div>

            <div class="form-group row">
                {{ form_label(
                    form.url,
                    null,
                    {'label_attr': {'class': 'col-sm-2 form-control-label'}})
                }}

                <div class="col-sm-10">
                    {{ form_widget(form.url, {'attr': {'class': 'form-control'}}) }}
                    {{ form_help(form.url) }}
                    {{ form_errors(form.url) }}
                </div>
            </div>

            <div class="form-group row">
                {{ form_label(
                    form.plainImage,
                    null,
                    {'label_attr': {'class': 'col-sm-2 form-control-label'}})
                }}

                <div class="col-sm-4">
                    <button class="btn btn-primary ks-btn-file">
                        <span class="la la-cloud-upload ks-icon"></span>
                        <span class="ks-text">Choose logo image</span>
                        <input
                            type="file"
                            name="{{ form.plainImage.vars.full_name }}"
                            {% if form.plainImage.vars.required %}required{% endif %}
                        >
                    </button>

                    {{ form_help(form.plainImage) }}
                    {{ form_errors(form.plainImage) }}

                    {% do form.plainImage.setRendered() %}
                </div>

                <div class="col-sm-6">
                    {% if popular_shop.image %}
                        {{ popular_shop.image }}
                    {% else %}
                        <p>Logo is not selected</p>
                    {% endif %}
                </div>
            </div>

            <div class="form-group row">
                {{ form_label(
                    form.pub,
                    null,
                    {'label_attr': {'class': 'col-sm-2 form-control-label'}})
                }}

                <div class="col-sm-10">
                    {{ form_widget(form.pub) }}
                    {{ form_help(form.pub) }}
                    {{ form_errors(form.pub) }}
                </div>
            </div>

            <table>
                <tr>
                    <td>
                        <a class="btn btn-primary btn-sm" href="{{ path('popular_shop_index') }}">back to list</a>
                    </td>
                    <td>
                        <button class="btn btn-primary btn-sm">{{ button_label|default('Save') }}</button>
                    </td>
                </tr>
            </table>
        {{ form_end(form) }}

        {% if popular_shop.id %}
            {{ include('backend/popular_shop/_delete_form.html.twig') }}
        {% endif %}
    </div>
</div>