{% extends "backend/base.html.twig" %}

{% block moduleTitle %}Популярные магазины{% endblock %}
{% block moduleSubTitle %}Список{% endblock %}

{% block content %}
    <div class="ks-dashboard-tabbed-sidebar">
        <div class="ks-dashboard-tabbed-sidebar-widgets">
            <div class="row">
                <div class="col-lg-12">
                    <table class="table table-striped table-bordered table-hover module_content_table">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Title</th>
                                <th>Url</th>
                                <th>Image</th>
                                <th>Pub</th>
                                <th>actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for popular_shop in pagination %}
                                <tr>
                                    <td>{{ popular_shop.id }}</td>
                                    <td>{{ popular_shop.title }}</td>
                                    <td>{{ popular_shop.url }}</td>
                                    <td>
                                        <img src="{{ resize_hash_image(popular_shop.imageHash, {'width': 100, 'height': 100, 'method': 'exact', 'ignore_existence': true}) }}">
                                    </td>
                                    <td>{{ popular_shop.pub ? 'Yes' : 'No' }}</td>
                                    <td>
                                        <a href="{{ path('popular_shop_show', {'id': popular_shop.id}) }}">
                                            <span class="ks-icon la la-eye"></span>
                                        </a>
                                        <a href="{{ path('popular_shop_edit', {'id': popular_shop.id}) }}">
                                            <span class="ks-icon la la-pencil"></span>
                                        </a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="6">no records found</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>

                    <p>
                        Total: {{ pagination.getTotalItemCount }}
                    </p>

                    {{ knp_pagination_render(pagination) }}

                    <a class="btn btn-primary btn-sm" href="{{ path('popular_shop_new') }}">Create new</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
