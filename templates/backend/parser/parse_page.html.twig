{% extends "backend/base.html.twig" %}

{% block moduleTitle %}Парсер{% endblock %}
{% block moduleSubTitle %}Одна страница{% endblock %}

{% block content %}
    <div class="ks-dashboard-tabbed-sidebar">
        <div class="ks-dashboard-tabbed-sidebar-widgets">
            <div class="row">
                <div class="col-lg-12">
                    {{ form_start(form) }}
                        <div class="form-group row">
                            {{ form_label(
                                form.pageUrl,
                                null,
                                {'label_attr': {'class': 'col-sm-2 form-control-label'}})
                            }}

                            <div class="col-sm-10">
                                {{ form_widget(form.pageUrl, {'attr': {'class': 'form-control'}}) }}
                                {{ form_help(form.pageUrl) }}
                                {{ form_errors(form.pageUrl) }}
                            </div>
                        </div>

                        <div class="form-group row">
                            {{ form_label(
                                form.category,
                                null,
                                {'label_attr': {'class': 'col-sm-2 form-control-label'}})
                            }}

                            <div class="col-sm-10">
                                {{ form_widget(form.category, {'attr': {'class': 'form-control'}}) }}
                                {{ form_help(form.category) }}
                                {{ form_errors(form.category) }}
                            </div>
                        </div>

                        <table>
                            <tr>
                                <td>
                                    <button class="btn btn-primary btn-sm">{{ button_label|default('Parse') }}</button>
                                </td>
                            </tr>
                        </table>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}