{% extends "backend/base.html.twig" %}

{% block moduleTitle %}Категории статей{% endblock %}
{% block moduleSubTitle %}Просмотр{% endblock %}

{% block content %}
    <div class="ks-dashboard-tabbed-sidebar">
        <div class="ks-dashboard-tabbed-sidebar-widgets">
            <div class="row">
                <div class="col-lg-12">
                    <table class="table">
                        <tbody>
                            <tr>
                                <th>id</th>
                                <td>{{ article_category.id }}</td>
                            </tr>
                            <tr>
                                <th>url</th>
                                <td>{{ article_category.url }}</td>
                            </tr>
                            <tr>
                                <th>Поля с привязкой к языку</th>
                                <td>
                                    <h4>Заголовки</h4>
                                    {% for translation in article_category.articleCategoryTranslations %}
                                        <p>{{ translation.title }}</p>
                                    {% endfor %}
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <table>
                        <tr>
                            <td>
                                <a class="btn btn-primary btn-sm" href="{{ path('article_category_index') }}">back to list</a>
                            </td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}