<div class="card">
    <div class="card-block">
        {{ form_start(form) }}
            <div class="form-group row">
                {{ form_label(
                    form.url,
                    null,
                    {'label_attr': {'class': 'col-sm-2 form-control-label'}})
                }}

                <div class="col-sm-10">
                    {{ form_widget(form.url, {'attr': {'class': 'form-control'}}) }}
                    {{ form_help(form.url) }}
                    {{ form_errors(form.url) }}
                </div>
            </div>

            <div class="form-group row">
                {{ form_label(
                    form.pub,
                    null,
                    {'label_attr': {'class': 'col-sm-2 form-control-label'}})
                }}

                <div class="col-sm-10">
                    {{ form_widget(form.pub) }}
                    {{ form_help(form.pub) }}
                    {{ form_errors(form.pub) }}
                </div>
            </div>

            <div class="form-group row">
                {{ form_label(
                    form.articleCategoryTranslations,
                    null,
                    {'label_attr': {'class': 'col-sm-2 form-control-label'}})
                }}

                <div class="col-sm-10">
                    {{ form_widget(form.articleCategoryTranslations) }}
                    {{ form_help(form.articleCategoryTranslations) }}
                    {{ form_errors(form.articleCategoryTranslations) }}
                </div>
            </div>

            <table>
                <tr>
                    <td>
                        <a class="btn btn-primary btn-sm" href="{{ path('article_category_index') }}">back to list</a>
                    </td>
                    <td>
                        <button class="btn btn-primary btn-sm js_save_with_tiny_mce">{{ button_label|default('Save') }}</button>
                    </td>
                    <td>
                        <a class="btn btn-primary btn-sm js_add_translation" data-id="article_category_articleCategoryTranslations" href="#">
                            Add translation
                        </a>
                    </td>
                </tr>
            </table>
        {{ form_end(form) }}

        {% if article_category.id %}
            {{ include('backend/article_category/_delete_form.html.twig') }}
        {% endif %}
    </div>
</div>
