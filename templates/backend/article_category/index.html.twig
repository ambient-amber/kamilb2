{% extends "backend/base.html.twig" %}

{% block moduleTitle %}Категории статей{% endblock %}
{% block moduleSubTitle %}Список{% endblock %}

{% block content %}
<div class="ks-dashboard-tabbed-sidebar">
    <div class="ks-dashboard-tabbed-sidebar-widgets">
        <div class="row">
            <div class="col-lg-12">
                <table class="table table-striped table-bordered table-hover module_content_table">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Title</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for article_category in article_categories %}
                            <tr>
                                <td>{{ article_category.id }}</td>
                                <td>
                                    {% for translation in article_category.articleCategoryTranslations %}
                                        <p>
                                            {{ translation.title }}
                                        </p>
                                    {% endfor %}
                                </td>
                                <td>
                                    <a href="{{ path('article_category_show', {'id': article_category.id}) }}" title="look">
                                        <span class="ks-icon la la-eye"></span>
                                    </a>
                                    <a href="{{ path('article_category_edit', {'id': article_category.id}) }}" title="edit">
                                        <span class="ks-icon la la-pencil"></span>
                                    </a>
                                    <a href="{{ path('article_category_pub_toggle', {'id': article_category.id}) }}" class="pub_toggle_link {{ article_category.pub ? 'active' : '' }}" title="toggle pub">
                                        <i class="ks-icon la la-lightbulb-o"></i>
                                    </a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="3">no records found</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>

                <a class="btn btn-primary btn-sm" href="{{ path('article_new') }}">Create new</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}