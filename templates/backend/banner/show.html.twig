{% extends "backend/base.html.twig" %}

{% block moduleTitle %}Баннеры{% endblock %}
{% block moduleSubTitle %}Просмотр{% endblock %}

{% block content %}
<div class="ks-dashboard-tabbed-sidebar">
    <div class="ks-dashboard-tabbed-sidebar-widgets">
        <div class="row">
            <div class="col-lg-12">
                <table class="table">
                    <tbody>
                        <tr>
                            <th>Id</th>
                            <td>{{ banner.id }}</td>
                        </tr>
                        <tr>
                            <th>PageUrl</th>
                            <td>{{ banner.pageUrl }}</td>
                        </tr>
                        <tr>
                            <th>Link</th>
                            <td>{{ banner.link }}</td>
                        </tr>
                        <tr>
                            <th>PagePlace</th>
                            <td>{{ banner.pagePlace }}</td>
                        </tr>
                        <tr>
                            <th>Image</th>
                            <td>
                                <img src="{{ uploaded_hash_asset(banner.imageHash) }}">
                            </td>
                        </tr>
                        <tr>
                            <th>Pub</th>
                            <td>{{ banner.pub ? 'Yes' : 'No' }}</td>
                        </tr>
                        <tr>
                            <th>Url</th>
                            <td>{{ banner.url }}</td>
                        </tr>
                    </tbody>
                </table>

                <table>
                    <tr>
                        <td>
                            <a class="btn btn-primary btn-sm" href="{{ path('banner_index') }}">back to list</a>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}