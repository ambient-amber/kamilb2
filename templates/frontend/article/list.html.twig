{% extends "frontend/base.html.twig" %}

{% block title %}Список статей{% endblock %}

{% block header %}
    <div class="page_header">
        <a href="#" class="article_list_spoiler"></a>

        <a href="/" class="inner_page_logo"></a>

        <div class="article_list">
            <a href="/" class="article_list_item">Как отслеживать посылки?</a>
            <a href="/" class="article_list_item">Как покупать в интернете?</a>
        </div>

        <div class="telegram_link_wrap">
            <a href="#" class="telegram_link">Телеграм бот</a>
        </div>
    </div>
{% endblock %}

{% block body %}
    <main>
        <div class="page_content_block">
            <div class="page_content_block_inner">
                <h1>Статьи</h1>

                {% if pagination %}
                    <div class="items_list">
                        {% for article in pagination %}
                            <div class="row">
                                <div class="cell">
                                    <a href="{{ path('article_list') }}/{{ article.url }}/">
                                        <img src="{{ resize_hash_image(article.imageHash, {'width': 100, 'height': 100, 'method': 'exact', 'ignore_existence': true}) }}">
                                    </a>
                                </div>
                                <div class="cell">
                                    {% for translation in article.articleTranslations %}
                                        <a class="items_list_link" href="{{ path('article_list') }}/{{ article.url }}/">{{ translation.title }}</a>
                                    {% endfor %}
                                </div>
                            </div>
                        {% endfor %}
                    </div>
                {% else %}
                    <p>{% trans %}no_active_articles{% endtrans %}</p>
                {% endif %}
            </div>
        </div>
    </main>
{% endblock %}
